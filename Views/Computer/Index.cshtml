@model IEnumerable<MvcLabManager.Models.Computer>

@{
    ViewData["Title"] = "Computadores";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum computador cadastrado</p>
}
else
{
    <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Ram</th>
                    <th>Processador</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var computer in Model)
                {
                    <tr>
                        <td>@computer.Id</td>
                        <td>@computer.Ram</td>
                        <td>@computer.Processor</td>
                        <td>
                            <a 

                           <a asp-controller="Computer"
                            asp-action="Show"
                            asp-route-id=
                            "@Computer.Id">About Blog</a>

                                                        @*<a 
                            class="btn btn-primary btn-sm"
                            href="/Computer/Show/@computer.Id">
                            Ver
                            </a>
                            <a 
                            class="btn btn-primary btn-sm"
                            href="/Computer/Delete/@computer.Id">
                            Deletar
                            </a>*@

                        </td>
                    </tr>
                }
            </tbody>
    </table>
}
